extends ../main-layout.pug

block main

	- var dropdown = [{id: "adults", label: "взрослые"}, {id: "children", label: "дети"}, {id: "baby", label: "младенцы"}];
	- var dropdown2 = [{id: "bedrooms", label: "спальни"}, {id: "bed", label: "кровати"}, {id: "separate-room", label: "ванные комнаты"}];
	- var additional = [{id: "breakfast", label: "Завтрак"}, {id: "desk", label: "Письменный стол"}, {id: "feeding-chair", label: "Стул для кормления"}, {id: "cot", label: "Кроватка"}, {id: "tv", label: "Телевизор"}, {id: "shampoo", label: "Шампунь"}];

	main.main
		section.search-sect
			.container
				.row
					.col-lg-3
						.search-sect__filter.search-filter
							.search-filter__block-date
								.search-filter__title
									span.h3 даты пребывания в отеле
								.formfield
									.formfield__wrap.js-calendar-parent
										input.formfield__input.js-input-datepicker#search-date(name="search-date" type="text" placeholder="ДД.ММ" readonly)
										button.formfield__icon.js-btn-datepicker(type="button")
										.js-range-datepicker
							.search-filter__block
								.search-filter__title
									span.h3 даты пребывания в отеле
								.formfield
									.formfield__dropdown.js-dropdown-form(data-default-text="Сколько гостей")
										.dropdown.js-tgl-dropdown
											span.dropdown__text.js-guests Сколько гостей
										button.formfield__icon.js-tgl-dropdown(type="button")
										.dropdown__block
											ul.dropdown__list.dropdown-list
												each item in dropdown
													li.dropdown-list__item
														label.dropdown-list__label #{item.label}
														.dropdown-list__quantity.quantity
															button(type="button").quantity__btn.quantity-btn.js-btn-dec -
															input.quantity__input.js-current-total(id=item.id type="number" value="0" min="0" max="5" name=item.id readonly)
															button(type="button").quantity__btn.quantity-btn.quantity-btn_visible.js-btn-inc +
											.dropdown__btns
												button.btn-purple.js-dropdown-reset(type="button") очистить
												button.btn-purple.btn-purple_visible.js-dropdown-apply(type="button") применить
							.search-filter__block
								.search-filter__title.search-filter__title_mb20
									span.h3 диапазон цены
									span.search-filter__price
										span.h3.js-min-val
										span.h3.js-max-val
								.search-filter__range.js-range
								.search-filter__desc
									p Стоимость за сутки пребывания в номере
							.search-filter__block
								.search-filter__title.search-filter__title_mb16
									span.h3 правила дома
								ul.search-filter__list-check.list-check
									li.list-check__item
										.formcheck
											input.formcheck__checkbox#check1(type="checkbox", name="check1")
											label.formcheck__label(for="check1") Можно курить
									li.list-check__item
										.formcheck
											input.formcheck__checkbox#check2(type="checkbox", name="check2")
											label.formcheck__label(for="check2") Можно с питомцами
									li.list-check__item
										.formcheck
											input.formcheck__checkbox#check3(type="checkbox", name="check3")
											label.formcheck__label(for="check3") Можно пригласить гостей (до 10 человек)
							.search-filter__block
								.search-filter__title.search-filter__title_mb16
									span.h3 доступность
								ul.search-filter__list-check.list-check
									li.list-check__item
										.formcheck
											input.formcheck__checkbox#check4(type="checkbox", name="check4")
											label.formcheck__label.formcheck__label_with-info(for="check4") Широкий коридор
										.list-check__info
											p Ширина коридоров в номере не менее 91 см.
									li.list-check__item
										.formcheck
											input.formcheck__checkbox#check5(type="checkbox", name="check5")
											label.formcheck__label.formcheck__label_with-info(for="check5") Помощник для инвалидов
										.list-check__info
											p На 1 этаже вас встретит специалист  и проводит до номера.
							.search-filter__block
								.search-filter__title
									span.h3 удобства номера
								.formfield
									.formfield__dropdown.js-dropdown-form(data-default-text="Доп. условия")
										.dropdown.js-tgl-dropdown
											span.dropdown__text.js-guests Доп. условия
										button.formfield__icon.js-tgl-dropdown(type="button")
										.dropdown__block
											ul.dropdown__list.dropdown-list
												each item in dropdown2
													li.dropdown-list__item
														label.dropdown-list__label #{item.label}
														.dropdown-list__quantity.quantity
															button(type="button").quantity__btn.quantity-btn.js-btn-dec -
															input.quantity__input.js-current-total(id=item.id type="number" value="0" min="0" max="5" name=item.id readonly)
															button(type="button").quantity__btn.quantity-btn.quantity-btn_visible.js-btn-inc +
											.dropdown__btns
												button.btn-purple.js-dropdown-reset(type="button") очистить
												button.btn-purple.btn-purple_visible.js-dropdown-apply(type="button") применить
							.search-filter__block
								button.search-filter__title.search-filter__title_btn.js-tgl-slidedown
									span.h3 дополнительные удобства
								ul.search-filter__list-check.list-check.list-check_hidden.js-body-slidedown
									each item inadditional
										li.list-check__item
											.formcheck
												input.formcheck__checkbox(id=item.id type="checkbox", name=item.id)
												label.formcheck__label(for=item.id) #{item.label}
					.col-lg-9
						.search-sect__right
							h1.search-sect__title Номера, которые мы для вас подобрали
							.result-sliders
								- for (var card = 0; card < 12; card++)
									.result-sliders__card.result-card
										.result-card__slider.result-slider
											.result-slider__wrap.js-result-slider
												- for (var item = 0; item < 4; item++)
													.result-slider__item.js-result-slide
														img(src="img/room-details/image" + item + ".jpg", alt="" srcset="img/room-details/image3@2x.jpg 2x, img/room-details/image3@3x.jpg 3x")
											.result-slider__dots.js-slider-dots
											button.result-slider__prev.js-slider-prev
											button.result-slider__next.js-slider-next
										.result-slider__bottom.current-info
											.current-info__wrap
												span.current-info__namber № 888
												span.current-info__type люкс
											.current-info__wrap
												span.current-info__price 9 990₽
												span.current-info__period в сутки
											.current-info__rating
												- for (var star = 0; star < 5; star++)
													.current-info__stars.stars
														input.stars__checkbox(type="radio" id="star" + star name="star")
														label.stars__star(for="star" + star)
															img(src="img/star.svg")
												.current-info__cnt
													span 145
													span Отзывов

