extends ../main-layout.pug

block main
	main.main
		section.main__sliders-wraper.sliders-wraper
			.main__slider
				.main-slider.js-slick-sl
					.main-slider__item
						img(src="img/room-details/image.jpg", alt="" srcset="img/room-details/image@2x.jpg 2x, img/room-details/image@3x.jpg 3x")
					.main-slider__item
						img(src="img/room-details/image2.jpg", alt="" srcset="img/room-details/image2@2x.jpg 2x, img/room-details/image2@3x.jpg 3x")
					.main-slider__item
						img(src="img/room-details/image3.jpg", alt="" srcset="img/room-details/image3@2x.jpg 2x, img/room-details/image3@3x.jpg 3x")
			.main__sm-slider
				.sm-slider.js-slick-sm-sl
					.sm-slider__item
						img(src="img/room-details/image.jpg", alt="" srcset="img/room-details/image@2x.jpg 2x, img/room-details/image@3x.jpg 3x")
					.sm-slider__item
						img(src="img/room-details/image2.jpg", alt="" srcset="img/room-details/image2@2x.jpg 2x, img/room-details/image2@3x.jpg 3x")
					.sm-slider__item
						img(src="img/room-details/image3.jpg", alt="" srcset="img/room-details/image3@2x.jpg 2x, img/room-details/image3@3x.jpg 3x")
		section.main__room-info.room-info
			.container
				.row
					.col-lg-8
						.room-info__left
							.info-top
								span.info-top__title Сведения о номере
								ul.info-top__list.info-list
									li.info-list__item.info-item
										img.info-item__img(src="img/room-details/icons/smile.svg", alt="")
										.info-item__content
											span Комфорт
											p Шумопоглощающие стены
									li.info-list__item.info-item
										img.info-item__img(src="img/room-details/icons/city.svg", alt="")
										.info-item__content
											span Удобство
											p Окно в каждой из спален
									li.info-list__item.info-item
										img.info-item__img(src="img/room-details/icons/whatshot.svg", alt="")
										.info-item__content
											span Уют
											p Номер оснащён камином
							.info-top
								span.info-top__title Впечатления от номера
								.info-top__chart
									.chart
										<svg class="chart__circle js-circle-svg" width="126" height="126">
											<linearGradient id="linearColors1" x1="0" y1="0" x2="1" y2="1">
												<stop offset="0%" stop-color="#FFE39C"></stop>
												<stop offset="100%" stop-color="#FFBA9C"></stop>
											</linearGradient>
											<linearGradient id="linearColors2" x1="0.5" y1="0" x2="0.5" y2="1">
												<stop offset="0%" stop-color="#BC9CFF"></stop>
												<stop offset="100%" stop-color="#8BA4F9"></stop>
											</linearGradient>
											<linearGradient id="linearColors3" x1="1" y1="0" x2="0" y2="1">
												<stop offset="0%" stop-color="#6FCF97"></stop>
												<stop offset="100%" stop-color="#66D2EA"></stop>
											</linearGradient>
											<linearGradient id="linearColors4" x1="1" y1="1" x2="0" y2="0">
												<stop offset="0%" stop-color="#919191"></stop>
												<stop offset="100%" stop-color="#3D4975"></stop>
											</linearGradient>
											<path d="" fill="none" stroke="url(#linearColors1)" stroke-width="4" data-amount="130" />
											<path d="" fill="none" stroke="url(#linearColors2)" stroke-width="4" data-amount="65" />
											<path d="" fill="none" stroke="url(#linearColors3)" stroke-width="4" data-amount="65" />
											<path d="" fill="none" stroke="url(#linearColors4)" stroke-width="4" data-amount="0" />
											<text fill="#000" x="63" y="60" text-anchor="middle" class="js-amount">260</text>
											<text fill="#000" x="63" y="80" text-anchor="middle">голосов</text>
										</svg>
										ul.chart__list.chart-list
											li.chart-list__item.chart-list__item_3 Великолепно
											li.chart-list__item.chart-list__item_2 Хорошо
											li.chart-list__item.chart-list__item_1 Удовлетворительно
											li.chart-list__item.chart-list__item_0 Разочарован
